@model VivaFund.DomainModels.Reward



<div class="form-horizontal">

    <h4 class="text-center">Rewards </h4>
    <hr />

  
    <div class="form-group">
        @Html.LabelFor(model => model.Title, "Reward Title", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter Title" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Value, "Set Value", htmlAttributes: new { @class = "control-label col-md-6 text-right" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RewardDescription, htmlAttributes: new { @class = "control-label col-md-6 text-right" })
        <div class="col-md-6">
            @Html.TextAreaFor(model => model.RewardDescription, new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
            @Html.ValidationMessageFor(model => model.RewardDescription, "", new { @class = "text-danger" })
        </div>
    </div>
    

    
</div>